{
    "manifest_version": 3,
    "name": "Bookmark Checker",
    "version": "1.0",
    "description": "Check if bookmarks are valid",
    "permissions": [
        "bookmarks",
        "tabs",
        "notifications",
        "alarms",
        "background"
      ],
      "host_permissions": [
        "<all_urls>"
      ],
    "default_locale": "zh_CN",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }